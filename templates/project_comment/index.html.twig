{% extends 'base.html.twig' %}

{% block title %}ProjectComment index{% endblock %}

{% block content %}
    <h1>ProjectComment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project_comment in project_comments %}
            <tr>
                <td>{{ project_comment.id }}</td>
                <td>{{ project_comment.content }}</td>
                <td>{{ project_comment.createdAt ? project_comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_project_comment_show', {'id': project_comment.id}) }}">show</a>
                    <a href="{{ path('app_project_comment_edit', {'id': project_comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_project_comment_new') }}">Create new</a>
{% endblock %}
