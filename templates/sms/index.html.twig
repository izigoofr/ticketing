{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header text-center">
                        <h3>Envoyer un SMS</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ path('send_sms') }}">
                            <div class="form-group">
                                <label for="number">Numéro de téléphone :</label>
                                <input type="text" name="number" id="number" class="form-control" required>
                            </div>
                            <div class="form-group mt-3">
                                <label for="name">Nom de l'expéditeur :</label>
                                <input type="text" name="name" id="name" class="form-control" required>
                            </div>
                            <div class="form-group mt-3">
                                <label for="text">Texte du SMS :</label>
                                <textarea name="text" id="text" class="form-control" rows="4" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block mt-4">Envoyer le SMS</button>
                        </form>
                    </div>
                </div>
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
